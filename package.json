{
  "name": "typeio",
  "description": "Typescript-first schema declaration and validation library",
  "repository": "https://github.com/hernantas/type-io.git",
  "author": "Zulfikar Raditya Hernanta <hernantas@gmail.com>",
  "license": "MIT",
  "packageManager": "yarn@3.1.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "clean": "rimraf packages/**/*.tsbuildinfo packages/**/dist",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "test": "yarn mocha -r ts-node/register **/test/**/*.spec.ts"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "chai": "^4.3.4",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "mocha": "^9.1.3",
    "prettier": "^2.5.1",
    "prettier-plugin-jsdoc": "^0.3.30",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
